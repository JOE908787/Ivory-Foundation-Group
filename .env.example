# Copy to .env and fill values

# Basic Configuration
DOMAIN=your-domain.example
LETSENCRYPT_EMAIL=admin@your-domain.example
SESSION_SECRET=replace-with-a-strong-random-value
PORT=3000
NODE_ENV=production

# Email Configuration (SMTP)
# You can use any SMTP service (Gmail, SendGrid, AWS SES, mailgun, etc.)
APP_URL=https://your-domain.example
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_SECURE=false
MAIL_USER=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM=noreply@your-domain.example

# Optional: Proxy settings (for production behind nginx/traefik)
TRUST_PROXY=1
USE_SECURE_COOKIE=1
